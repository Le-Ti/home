hardstatus string '%{=}bt %H%10=%{=r} %-Lw%{=b} %n%f%t %{-}%+Lw %=%{-} %l %m-%d %C%a' # good mono
hardstatus string '%{= km}bt %H%10=%{=r} %-Lw%{=b} %n%f%t %{-}%+Lw %=%{-} %l %m-%d %C%a' # good mono


